<%- css('new') %>
<% layout('boilerplate') -%>
<%- partial('../partials/_nav') %>

<div class="container-fluid" id="container">
  <div class="row">
    <%- partial('../partials/_profile') %>

    <div class="col-md-8">
      <form method="POST" action="/posts">
        <h3>New Post</h3>
        <p>
          <label class="sr-only">Title</label>
          <input type="text" class="form-control" placeholder="Title" name="title" required autofocus>
          <small class="text-danger">
            <% if (typeof errors !== 'undefined' && errors.hasOwnProperty('title')) { %>
              <%- errors.title %>
            <% } %>
          </small>        </p>
        <p>
          <label class="sr-only">Tags</label>
          <select data-placeholder="Select tags" multiple class="chosen-select form-control multiselect" name="tags">
            <option></option>
            <option>html</option>
            <option>css</option>
            <option>coding</option>
            <option>programming</option>
          </select>
          <small class="text-danger">
            <% if (typeof errors !== 'undefined' && errors.hasOwnProperty('tags')) { %>
              <%- errors.tags %>
            <% } %>
          </small>
        </p>
        <p>
          <label class="sr-only">Article</label>
          <textarea class="form-control" placeholder="Article" id="textarea" name="article" required></textarea>
          <small class="text-danger">
            <% if (typeof errors !== 'undefined' && errors.hasOwnProperty('article')) { %>
              <%- errors.article %>
            <% } %>
          </small>
        </p>
        <p><input type="submit" value="Post Article" class="btn btn-primary"></p>
      </form>
    </div>
  </div>

</div>
