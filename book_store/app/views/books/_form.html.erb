<div style="padding:50px;">
	<div class="row">
		<div class="col-md-6">
			<h2 class="text-center">Book Management System</h2>
		</div>
	</div>
	<div class="row">
		<div class="col-md-6">
			<% if @book.errors.any? %>
				<% @book.errors.full_messages.each do |err| %>
					<p class="text-danger"><%= err %></p>
				<% end %>
			<% end %>

			<%= form_for @book do |f| %>
			  <div class="form-group">
			  	<%= f.label :name, "Name", class: 'sr-only' %>
				<%= f.text_field :name, class: 'form-control', placeholder: 'Name' %>
			  </div>

			  <div class="form-group">
			  	<%= f.label :author, "Name", class: 'sr-only' %>
				<%= f.text_field :author, class: 'form-control', placeholder: 'Author' %>
			  </div>

			  <div class="form-group">
			  	<%= f.submit "#{button_name}", class: 'btn btn-primary btn-block' %>
			  </div>
			<% end %>

			<%= link_to "List Books", :action => "index" %>
		</div>
	</div>
</div>